page {
  height: 100%;
  width: 100%;
  font-family: '微软雅黑';
}

.container {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
}

.title {
  width: 100%;
  height: 332rpx;
  background: linear-gradient(#fce406, #f8c44f);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title > image {
  margin: 80rpx 0 24rpx 0;
  width: 110rpx;
  height: 110rpx;
  border-radius: 50%;
}

.title > text {
  font-size: 36rpx;
  color: #2a2929;
}

.content {
  width: 100%;
  flex-grow: 1;
  background: #eee;
}

.content button {
  border-radius: 0;
  padding:0;
  background: #FFFFFF;
}

.content button::after{
  border: 0 solid #FFFFFF;
}

.important {
  margin-bottom: 16rpx;
}

.usual {
  margin-bottom: 2rpx;
}

.list {
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  color: #2a2929;
}

.using {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 36rpx;
  width: 36rpx;
  background: red;
  border-radius: 50%;
  font-size: 28rpx;
  color: white;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin: 0 20rpx 0 24rpx;
}

.end {
  width: 24rpx;
  height: 24rpx;
  margin: 0 24rpx 0 20rpx;
}

.list >view {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.list >text {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
