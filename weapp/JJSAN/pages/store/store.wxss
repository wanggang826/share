page {
  height: 100%;
  width: 100%;
}

view, button, text {
  font-family: '微软雅黑';
}

.container {
  height: 100%;
  width: 100%;
  box-sizing: border-box;
  background: #eee;
  position: relative;
}

.swipe {
  height: 446rpx;
  width: 100%;
  flex-shrink: 0;
}

.swipe image {
  height: 100%;
  width: 100%;
}

.scroll {
  width: 100%;
  min-height: 166rpx;
  max-height: 332rpx;
}

.content {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin-top: 2rpx;
}

.content image {
  height: 80rpx;
  width: 80rpx;
  margin-left: 24rpx;
}

.info {
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  margin-left: 20rpx;
}

.name {
  color: #2a2929;
  font-size: 30rpx;
  margin-top: 30rpx;
}

.detail {
  margin-top: 30rpx;
  font-size: 24rpx;
  margin-bottom: 30rpx;
}

.detail > text {
  display: inline-flex;
  height: 32rpx;
  align-items: center;
  justify-content: center;
}

.canlend, .canreturn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  width: 86rpx;
  border-radius: 10rpx;
}

.canlend {
  color: #2a2929;
  border: 2rpx solid #2a2929;
}

.canreturn {
  color: #ffe000;
  border: 2rpx solid #ffe000;
  margin-left: 40rpx;
}

.information {
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top: 14rpx;
}

.information>view {
  width: 100%;
  padding: 20rpx 0;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
  background: white;
  margin-bottom: 2rpx;
}

.information image {
  display: flex;
  flex-basis: 40rpx;
  height: 40rpx;
  width: 40rpx;
  margin: 0 20rpx 0 24rpx;
  flex-shrink: 0;
}

.desc {
  display: flex;
  font-size: 26rpx;
  color: #2a2929;
  flex-grow: 1;
}

.btn {
  position: absolute;
  width: 100%;
  height: 100rpx;
  left: 0;
  bottom: 0;
  display: flex;
  flex-direction: row;
  font-size: 36rpx;
}

.btn > text {
  width: 50%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.contact {
  background: #4c4c4c;
  color: #fff;
}

.borrow {
  background: linear-gradient(#f8c44f, #fce406);
  color: #fff;
}
