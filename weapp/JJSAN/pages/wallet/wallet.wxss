page {
  height: 100%;
  width: 100%;
  font-family: '微软雅黑';
  background: #eee;
}

.container {
  width: 100%;
  height: 100%;
  background: #eee;
}

.scroll {
  width: 100%;
  height: 100%;
}

.content {
  width: 100%;
  height: 110rpx;
  margin-bottom: 2rpx;
  background: white;
  padding: 0 24rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.content >view {
  display: flex;
  flex-direction: column;
}

.title {
  margin-bottom: 22rpx;
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.name {
  display: inline-block;
  font-size: 28rpx;
  color: #2a2929;
}

.prompt {
  display: inline-flex;
  width: 110rpx;
  height: 30rpx;
  background: #e8201b;
  font-size: 24rpx;
  color: #fff;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  margin-left: 50rpx;
}

.time {
  font-size: 26rpx;
  color: #8d8d8d;
}

.money {
  font-size: 30rpx;
  color: #f5c800;
}

.tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #939393;
}

.tip>image{
  width: 154rpx;
  height:180rpx;
  margin: 80rpx 0 20rpx 0;
}

